{% extends 'base.html.twig' %}
{% block content %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">User Account</h1>
</div>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Type</th>
                <th>Website</th>
                <th>User Name</th>
                <th>Password</th>
            </tr>
        </thead>
        <tbody>
            {% for k,s in json %}
                <tr>
                    <td>{{ k }}</td>
                    <td>
                        <a href="{{ s.website }}" target="_blank">
                            {{ s.website }}
                        </a>
                    </td>
                    <td>{{ s.username }}</td>
                    <td>{{ s.password }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">Database User Account</h1>
</div>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>Db</th>
            <th>User Name</th>
            <th>Password</th>
            <th>Type</th>
        </tr>
        </thead>
        <tbody>
        {% for s in db %}
            <tr>
                <td>{{ s.db }}</td>
                <td>{{ s.user }}</td>
                <td>{{ s.pass }}</td>
                <td>
                    {% if s.perm %}
                        write/read
                    {% else %}
                        read
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}