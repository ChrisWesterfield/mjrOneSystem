server {
    {% include "configuration/nginx/bits/port.conf.twig" %}
    {% include "configuration/nginx/bits/ssl.conf.twig" %}
    server_name {{ hostname }};
    root \"{{ docRoot }}\";

    index index.html index.htm index.php;

    charset {% if is defined charSet %}{{ charSet }}{% else %}utf-8{% endif %};

    location / {
        try_files \$uri \$uri/ /index.php?\$query_string;
    }

    {% include "configuration/nginx/bits/zendServer.conf.twig" %}

    location = /favicon.ico { access_log off; log_not_found off; }
    location = /robots.txt  { access_log off; log_not_found off; }

    access_log off;
    error_log  {{ logPath }}/{{ hostname }}.error.log error;

    sendfile off;

    client_max_body_size {% if is defined maxPost %}{{ maxPost }}{% else %}100{% endif %}M;

    location ~ \.php$ {
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass {{  listen }};
        fastcgi_index index.php;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME \$document_root\$fastcgi_script_name;
        {% include "configuration/nginx/bits/params.conf.twig" %}

        fastcgi_intercept_errors off;
        fastcgi_buffer_size {% if is defined fcgiBufferSize %}{{ fcgiBufferSize }}{% else %}16k{% endif %};
        fastcgi_buffers {% if is defined fcgiBuffer %}{{ fcgiBuffer }}{% else %}4 16k{% endif %};
        fastcgi_connect_timeout {% if is defined fcgiConnectionTimeOut %}{{ fcgiConnectionTimeOut }}{% else %}300{% endif %};
        fastcgi_send_timeout {% if is defined fcgiSendTimeOut %}{{ fcgiSendTimeOut }}{% else %}300{% endif %};
        fastcgi_read_timeout {% if is defined fcgiReadTimeOut %}{{ fcgiReadTimeOut }}{% else %}300{% endif %};
    }

    location ~ /\.ht {
        deny all;
    }

}